<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nikestore">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NikeStore"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".feature.favorite.FavoriteProductActivity"
            android:exported="false" />
        <activity
            android:name=".feature.order.OrderHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".feature.paymentres.PaymentResActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:pathPattern="/paymentRes"
                    android:scheme="nike" />
            </intent-filter>
        </activity>
        <activity
            android:name=".feature.shipping.ShippingActivity"
            android:exported="false" />
        <activity
            android:name=".feature.auth.AuthActivity"
            android:exported="false"
            android:theme="@style/Theme.Nike.AuthTheme" />
        <activity
            android:name=".feature.list.ProductListActivity"
            android:exported="false" />
        <activity
            android:name=".feature.comment.CommentListActivity"
            android:exported="false" />
        <activity
            android:name=".feature.detail.ProductDetailActivity"
            android:exported="false" />
        <activity
            android:name=".feature.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>